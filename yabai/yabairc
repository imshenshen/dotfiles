#!/usr/bin/env sh
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_opacity               off
yabai -m config window_shadow                on
yabai -m config window_animation_duration    0.0
yabai -m config window_animation_frame_rate  60
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.9
yabai -m config window_opacity_duration      0.2 
yabai -m config split_ratio                  0.5
yabai -m config auto_balance                 off

yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  38
yabai -m config bottom_padding               12
yabai -m config left_padding                 12
yabai -m config right_padding                12
yabai -m config window_gap                   06 
#yabai -m config external_bar                all:20:0

# specific space settings

yabai -m signal --add event=window_destroyed actives=yes action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"
yabai -m signal --add event=application_terminated action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"

yabai -m signal --add event=space_changed \
      action="osascript -e 'tell application \"UÌˆbersicht\" to refresh widget id \"shenshen-left-jsx\"'"

# Space 1 ä¸»å±å¹•
yabai -m space 1 --label "ğŸŒˆ Main"

# Space2 å¼€å‘ç”¨çš„ï¼ŒMicrosoft Edgeç”¨æ¥å¼€å‘ï¼Œä»¥åŠä¸€äº›IDE
yabai -m space 2 --label "âŒ¨ï¸  Dev"

# Space 3 ï¼šæ²Ÿé€šç”¨
yabai -m space 3 --label "ğŸ’¬ Chat"

# Space 4-6 å¤‡ç”¨
yabai -m space 4 --label "ğŸ– Free"
yabai -m space 5 --label "ğŸ– Free2"
yabai -m space 6 --label "ğŸ– Free3"
yabai -m space 7 --label "ğŸ¸ Media"

# åœ¨å‰¯å±ä¸Šç”¨
yabai -m space 8 --label "ğŸˆ Sec"
yabai -m space 9 --label "ğŸˆ Sec2"

# ä¸´æ—¶æ€§çš„App
otherApp='^(1Password 7|1Password|OmniFocus|æŸ¥æ‰¾å¹¶æ›¿æ¢|è®¿è¾¾|SwitchHosts|Alfred Preferences|Raycast|ç³»ç»Ÿè®¾ç½®)$'
topBarApp='^(JetBrains Toolbox)$'
yabai -m rule --add app="${otherApp}" manage=off
yabai -m rule --add app="${topBarApp}" manage=off
yabai -m rule --add app="Parallels Desktop" title="æ§åˆ¶ä¸­å¿ƒ" manage=off

# æ²¡æœ‰æ­£ç¡®Sub Windowçš„App
subWindowApp='^(Mail|é‚®ä»¶|Airmail|WeChat|å¾®ä¿¡|ä¼ä¸šå’šå’š|ME)$'
yabai -m rule --add app="${subWindowApp}" manage=off
#yabai -m signal --add event=window_created app="${subWindowApp}" action="$XDG_CONFIG_HOME/yabai/dongdong.sh"

# regex that matches JetBrains apps
JetBrainsApp='^(IntelliJ IDEA|WebStorm.*|GoLand.*)$'
yabai -m rule --add app="${JetBrainsApp}" manage=off

# iTerm Hotkey Window
yabai -m rule --add app="iTerm2" title=Hotkey.+ manage=off opacity=1
yabai -m rule --add app="iTerm2" title=Main.+ manage=off opacity=1
